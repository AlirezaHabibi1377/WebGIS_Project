    <script language="JavaScript">
         $(document).ready(function() {
            var data = {
                table: 'racetimes'
            };
            var chart = {
               type: 'column'
            };
            var title = {
               text: 'The Report of Sales between Cities of Iran'
            };
            var yAxis = {
               allowDecimals: false,
               title: {
                  text: 'Sale(Billion)'
               }
            };
            var tooltip = {
               formatter: function () {
                  return '<b>' + this.series.name +':' +
                     this.point.y + '</b><br/>' + this.point.name.toLowerCase();
               }
            };
            var credits = {
               enabled: false
            };
            var json = {};
            json.chart = chart;
            json.title = title;
            json.data = data;
            json.yAxis = yAxis;
            json.credits = credits;
            json.tooltip = tooltip;
            $('#container').highcharts(json);
         });
    </script>

